{{!
    @template local_resourcelibrary/resourcelibrary

    This template renders the main content area for the Resource Library.

    Example context (json):
    {
        "url" : "http://localhost/moodle/local/resourcelibrary/index.php?id=2"
    }
}}
<div class="resourcelibrary_permalink">
    <div class="input-group w-auto">
        <div class="input-group-prepend">
        <button class="btn btn-outline-secondary bnt-sm icon-no-margin d-flex justify-content-center align-items-center" id="resourcelibrary_permalink-t-{{uniqid}}">
            {{#pix}}fp/link_sm, theme, {{#str}}permalink:copy, local_resourcelibrary{{/str}}{{/pix}}
        </button>
        </div>
        <input id="resourcelibrary_permalink-i-{{uniqid}}" type="textarea" readonly value="{{url}}" class="form-control form-control-sm">
    </div>
</div>
{{#js}}
    require(['local_resourcelibrary/permalink'], function(Permalink) {
    Permalink.setupCopyLink('resourcelibrary_permalink-t-{{uniqid}}','resourcelibrary_permalink-i-{{uniqid}}');
    });
{{/js}}