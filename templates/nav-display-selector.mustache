{{!
    @template local_resourcelibrary/nav-display-selector

    This template renders display dropdown.

    Example context (json):
    {
        "cards": true,
        "list": false,
        "summary": false
    }
}}
<div class="dropdown mb-1">
    <button id="displaydropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
    aria-label="{{#str}} aria:displaydropdown, local_resourcelibrary {{/str}}">
        {{#pix}} a/view_icon_active {{/pix}}
        <span class="d-sm-inline-block" data-active-item-text>
            {{#cards}}{{#str}} card, local_resourcelibrary {{/str}}{{/cards}}
            {{#list}}{{#str}} list, local_resourcelibrary {{/str}}{{/list}}
        </span>
    </button>
    <ul class="dropdown-menu" data-show-active-item aria-labelledby="displaydropdown">
        <li>
            <a class="dropdown-item {{#cards}}active{{/cards}}" href="#" data-display-option="cards" aria-label="{{#str}} aria:card, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
            {{#str}} card, local_resourcelibrary {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item {{#list}}active{{/list}}" href="#" data-display-option="list"  aria-label="{{#str}} aria:list, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
            {{#str}} list, local_resourcelibrary {{/str}}
            </a>
        </li>
    </ul>
</div>
