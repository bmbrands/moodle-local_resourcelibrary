{{!
    @template core_entity/no-entities

    This template renders the no entities message.

    Example context (json):
    {
        "noentitiesimg": "https://moodlesite/theme/image.php/boost/block_recentlyaccessedentities/1535727318/entities",
        "noentitiestring": "Message"
    }
}}
<div class="text-xs-center text-center mt-3" data-region="empty-message">
    <img class="empty-placeholder-image-lg mt-1"
         src="{{noentitiesimg}}"
         alt="{{$noentitiestring}}{{#str}} noentities, local_resourcelibrary {{/str}}{{/noentitiestring}}"
         role="presentation">
    <p class="text-muted mt-3">{{$noentitiestring}}{{#str}} noentities, local_resourcelibrary {{/str}}{{/noentitiestring}}</p>
</div>