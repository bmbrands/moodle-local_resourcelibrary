{{!
    @template local_resourcelibrary/nav-sort-selector

    This template renders sorting dropdown.

    Example context (json):
    {
        "title": false,
        "lastaccessed": true
    }
}}

<div class="mb-1 mr-1 d-flex align-items-center">
    <div class="dropdown">
        <button id="sortingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:sortingdropdown, local_resourcelibrary {{/str}}">
            {{#pix}} t/sort_by {{/pix}}
            <span class="d-sm-inline-block" data-active-item-text>
                {{#title}}{{#str}} title, local_resourcelibrary {{/str}}{{/title}}
                {{#lastaccessed}}{{#str}} lastaccessed, local_resourcelibrary {{/str}}{{/lastaccessed}}
            </span>
        </button>
        <ul class="dropdown-menu" data-show-active-item aria-labelledby="sortingdropdown">
            <li>
                <a class="dropdown-item {{#title}}active{{/title}}" href="#" data-sort="asc" data-column="fullname" aria-label="{{#str}} aria:title, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
                    {{#str}} title, local_resourcelibrary {{/str}}
                </a>
            </li>
            <li>
                <a class="dropdown-item {{#title}}active{{/title}}" href="#" data-sort="desc" data-column="fullname" aria-label="{{#str}} aria:title:desc, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
                    {{#str}} title:desc, local_resourcelibrary {{/str}}
                </a>
            </li>
            <li>
                <a class="dropdown-item {{#lastaccessed}}active{{/lastaccessed}}" href="#" data-sort="asc" data-column="timemodified" aria-label="{{#str}} aria:lastmodification, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
                    {{#str}} lastmodification, local_resourcelibrary {{/str}}
                </a>
            </li>
            <li>
                <a class="dropdown-item {{#lastaccessed}}active{{/lastaccessed}}" href="#" data-sort="desc" data-column="timemodified" aria-label="{{#str}} aria:lastmodification:desc, local_resourcelibrary {{/str}}" aria-controls="entities-view-{{uniqid}}">
                    {{#str}} lastmodification:desc, local_resourcelibrary {{/str}}
                </a>
            </li>
        </ul>
    </div>
</div>